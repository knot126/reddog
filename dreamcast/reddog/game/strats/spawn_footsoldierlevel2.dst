LOCALINT StillTargetHit


LOCALINT StillMovingToPoint
LOCALINT NeedDirection
LOCALINT OLDSTATUS


TRIGGER CollStrat
	UpdateTrigFlag(TRIG_ALWAYS_RUN)
	//SAVE OUT TARGET INFO
	SAVETARGET = MainTarget   										  

	IF ((!WaitingForClearance) AND ((!(MyFlag2 & STRATCOLLIDED)) AND (!(STATUS & FIRING)) AND (MODE != GUARD) AND (MODE != STOP) AND (MODE != DIE)) AND CollideStratNew(0))
			
		ClearBusy()
		    	   
		LASTX = CheckX
		LASTY = CheckY
			
		//ENSURE WE ARE NOT SHIELDING
		OLDSTATUS = STATUS
		STATUS = STATUS & LNOT(SHIELDMODE | SHIELDING | SHIELDENTRY | SHIELDEXIT)
		MyVar = 0.05

		PauseTriggers(WHENHIT,REMEMBER)

	 	Moving = 0 
		CollidingWithStrat = 1 
		
		StillTargetHit = 1			  												   

		WHILE (StillTargetHit)

			NeedDirection = 1

			WHILE (NeedDirection)
				MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierStop>REPEAT
				TowardPlayer(0.1,0.0)
			   	direction = direction + 1
			   	IF (direction = 4)
			   		direction = 0
			   	ENDIF
				IF ( (!(MyFlag2 & STRATCOLLIDED)) AND (!GetFreeCollisionSpace(RUNSPEED/2.0,direction)))
					NeedDirection = 1
				ELSE
					NeedDirection = 0
				ENDIF
		
			ENDWHILE
						 

		 	Moving = 1

			//NOW MOVING TO FREE SPACE

			timer = 0

			StillMovingToPoint = 1

		 //	WHILE (!NearPlayerXY(NearRange / 3.0) AND (StillMovingToPoint))
		  	WHILE (StillMovingToPoint)
					timer = timer + 1
				  	HitWall(UPDATE)
	 				AvoidSurround(FORCE_POS_AND_WAYPOS_AWAY)
		    		//IS THE SPACE BEHIND ME ?
				   	IF (!SeeWayZ(TWOPI/16.0))
						IF (direction = 3)
   				   		MoveTowardXY(CheckX,CheckY,RUNSPEED/2.0)
						
				   	 	MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierWalkBack>REPEAT
				   	  	ENDIF
						IF (!direction)
					   	MoveX(RUNSPEED )
						MODE = WALKRIGHT
				   	 	MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierStepRight>REPEAT
				   	  	ENDIF
						IF (direction = 1)
					  	MoveX(-RUNSPEED)
						
						MODE = WALKLEFT
				   	 	MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierStepLeft>REPEAT
				   	  	ENDIF
						
						
						
						TowardPlayer(0.1,0.0)
   				   	 //	MoveTowardXY(CheckX,CheckY,RUNSPEED/2.0)
				   	ELSE
						MODE = WALK
						MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierWalk>REPEAT

	 					TowardWay(0.05,0.05)
	 					MoveY(RUNSPEED/2.0)
				   	ENDIF

					IF ((!(MyFlag2 & STRATCOLLIDED)) AND (timer < 150) AND (!CollideStratNew(1)))
						StillMovingToPoint = 1
					ELSE
						StillMovingToPoint = 0
					ENDIF
		   	ENDWHILE
			
			IF ((!(MyFlag2 & STRATCOLLIDED)) AND (CollideStratNew(2)))		
				StillTargetHit = 1
			ELSE
				StillTargetHit = 0
			ENDIF
		ENDWHILE

		MyFlag = MyFlag

		STATUS = OLDSTATUS
		//GET BACK INTO SHIELD MODE IF NEEDED
		IF ((STATUS & SHIELDMODE) AND (!(STATUS & SHIELDEXIT)))
		 MyVar = 0.1
			WHILE (MyVar < 1.0)
				MyVar = MyVar + 0.1
			ENDWHILE
		

			MODELANIM>ENEMIES\FOOTSOLDIERLEVEL2.RDO>footSoldierShieldEnter>0
		
			WHILE (MyAnimFlag & RUNNING)
				MyFlag = MyFlag
			ENDWHILE	 

  
	   		MODELANIM>ENEMIES\FOOTSOLDIERLEVEL2.RDO>footSoldierShieldMain>REPEAT
			   
		ELSE


			IF (MODE <= WALK)
				MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierWalk>REPEAT
			ELSE
				IF (MODE = RUN)
					MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierRun>REPEAT
				ENDIF
			ENDIF
		ENDIF	 

	   	ClearLastStratCollision()
	 	CheckX = LASTX
	 	CheckY = LASTY

	 	UnPauseTriggers()
		CollidingWithStrat = 0
	ENDIF
 	TRIGFIN
	RestoreTarget(SAVETARGET)
ENDTRIGGER


