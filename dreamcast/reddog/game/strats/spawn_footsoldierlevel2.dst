			 	IF (!antime)
					MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierStop>REPEAT
					antime = 30
			  	ENDIF
		   	ENDIF

		   	antime = antime - 1
			InsideCheck = 0
		  //	MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierStop>REPEAT
			MODE = STOP
		ENDIF
	ENDIF

	IF ((MODE != STOP) AND (MODE != GUARD) AND (!OutsideMap) AND (!(STATUS & TARGETTRACKING)))
  		CheckX = parentx
   		CheckY = parenty
		Moving = 1

		IF (SeeWayZ(TWOPI/4.0) AND SeePlayerZ(TWOPI/4.0))
			IF (MODE <= WALK)
				TowardWay(0.05,0.05)
				MoveY(RUNSPEED/2.0)
			ELSE
				TowardWay(0.1,0.1)
				MoveY(RUNSPEED)
			ENDIF
		ELSE
		
		IF (!NearCheckPosXY(10.0))
			MoveTowardXY(CheckX,CheckY,RUNSPEED/2.0)
		ENDIF

		TowardPlayer(0.1,0.0)
		ENDIF
	   	MyFlag = MyFlag | FLOORCOLL | GRAVITYON
	ENDIF

	IF (FIREPAUSE)
		FIREPAUSE = FIREPAUSE - 1
	ENDIF
ENDSTATE


LOCALINT antime

LOCALFLOAT oldhealth
LOCALFLOAT deathvel
LOCALINT BIG

TRIGGER HitCheck
    //ensure that this trigger can never be paused	
	UpdateTrigFlag(TRIG_ALWAYS_RUN)

	//get shield status
	IF ((MyFlag2 & BIGDAMAGE))
	// OR (frame = 66.0))
		
		health = 0
		MyFlag2 = MyFlag2 | BIGDAMAGE
		BIG = 1
	ENDIF

   //	IF ((BIG) OR  (((MyFlag & HITSTRAT) || (health <= 0.0)) AND (!(STATUS & SHIELDING))))
	IF ((MyFlag2 & PLAYERHIT) OR (BIG) OR  (((MyFlag & HITSTRAT) || (health <= 0.0)) ))
	   	oldhealth = health

		IF ((!(MyFlag2 & PLAYERHIT)) AND (health > 0.0))
			//handle the get hit state
			STATUS = STATUS | IMHIT
			Moving = 0
			PauseTriggers(-1,REMEMBER)
			//WAS I IN ANY WAY ENTERING OR EXITING SHIELD?
		   //	IF ((STATUS & SHIELDMODE))
		   //		MODELANIM>ENEMIES\FOOTSOLDIERLEVEL2.RDO>footMarkGetHit>NOTWEEN 
		   //	ELSE
		   //		MODELANIM>ENEMIES\FOOTSOLDIERLEVEL2.RDO>footSoldierGetHit>NOTWEEN 
		   //	ENDIF
		   
		   
		   //	WHILE (MyAnimFlag & RUNNING)
		   //		MyFlag = MyFlag
		   //	ENDWHILE
		
		   //	IF (STATUS & SHIELDING)
		   //		MODELANIM>ENEMIES\FOOTSOLDIERLEVEL2.RDO>footSoldierShieldMain>REPEAT
		   //	ENDIF
			health = oldhealth
			UnPauseTriggers()
			STATUS = STATUS & LNOT(IMHIT)
			Moving = 1

		ELSE
			//DEAD

			health = 0.0

			//ELSE DIE
			//FLAG UP FOR SHIELD

		   	IF (!(MyFlag2 & BIGDAMAGE))
		   		frame = 99.0
		   	ENDIF
			MyFlag = MyFlag | FLOORCOLL | GRAVITYON
			SetFriction(1.0,0.4,1.0)
			PauseTriggers(-1,FORGET)
			MyFlag = MyFlag & LNOT(STRATCOLL)
			IF (STATUS & MAINPROCESSING)
				TRIGKILL>CollStrat EVERY 1
				TRIGKILL>WaitForClearance EVERY 1
				TRIGKILL>GravControl EVERY 1
			ENDIF
			MyFlag2 = MyFlag2 & LNOT(STOPPED)
			IF (MyFlag2 & PLAYERHIT)
				PLAYSOUND>ENEMY_HIT3 1 1.0 0.0 0.0 0.0 RANDOM
		   
			   	deathvel = FABS(PlayerRelVelY) * 1.2
				//AM I FACING THE PLAYER ?
				IF (SeePlayerZ(TWOPI/4.0))
		   			SetFriction(0.4,0.1,0.5)
				 	MoveY(-deathvel)
					MoveZ(0.5)
				ELSE
		  			SetFriction(0.4,0.1,0.0)
					DieForward = 1
					IF (deathvel < 0.5)
						deathvel = 0.5
		   			ENDIF
					MoveY(deathvel * 1.5)
					MoveZ(0.25)
				ENDIF
			ENDIF
			IF (MyFlag2 & BIGDAMAGE)
				//ENSURE CORRECT FRICTION
		   		SetFriction(0.4,0.1,0.0)

				MoveY(0.5) 
				MoveZ(0.5)
			ENDIF

			MODE = DIE
			TRIGRESET
			TRIGSTOP
			STAT>Wait
		ENDIF 	
	ELSE
		health = oldhealth

	ENDIF
	TRIGFIN
ENDTRIGGER

LOCALINT endSound
LOCALINT WALK1SOUND
LOCALINT WALK2SOUND
LOCALINT BWALK1SOUND
LOCALINT BWALK2SOUND
LOCALINT RUN1SOUND
LOCALINT RUN2SOUND
LOCALINT LEFT1SOUND
LOCALINT LEFT2SOUND
LOCALINT RIGHT1SOUND
LOCALINT RIGHT2SOUND
LOCALINT DIESOUND








TRIGGER SoundTrigger
	UpdateTrigFlag(TRIG_ALWAYS_RUN)

	IF (MODE <= DIE)
		// Wait until the start of the animation
		WHILE ((MyAnimFrame) OR (MyAnimFlag & TWEEN))
			MyFlag = MyFlag
		ENDWHILE
	ENDIF

	endSound = 0
	
//	IF (PAL)
		IF (MODE = WALK)
			WHILE ((MODE = WALK) AND (MyAnimFrame < WALK1SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALK)
				PLAYSOUND>SMLSTEP18 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
			WHILE ((MODE = WALK) AND (MyAnimFrame < WALK2SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALK)
				PLAYSOUND>SMLSTEP7 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
		ENDIF

		IF (MODE = WALKBACK)
			WHILE ((MODE = WALKBACK) AND (MyAnimFrame < BWALK1SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALKBACK)
				PLAYSOUND>SMLSTEP18 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
			WHILE ((MODE = WALKBACK) AND (MyAnimFrame < BWALK2SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALKBACK)
				PLAYSOUND>SMLSTEP7 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
		ENDIF

		IF (MODE = RUN)
			WHILE ((MODE = RUN) AND (MyAnimFrame < RUN1SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = RUN)
				PLAYSOUND>SOLDIER_RUNL 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
			WHILE ((MODE = RUN) AND (MyAnimFrame < RUN2SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = RUN)
				PLAYSOUND>SOLDIER_RUNR 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
		ENDIF
				
		IF (MODE = WALKLEFT)
			WHILE ((MODE = WALKLEFT) AND (MyAnimFrame < LEFT1SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALKLEFT)
				PLAYSOUND>SMLSTEP18 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
			WHILE ((MODE = WALKLEFT) AND (MyAnimFrame < LEFT2SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALKLEFT)
				PLAYSOUND>SMLSTEP7 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
		ENDIF 

		IF (MODE = WALKRIGHT)
			WHILE ((MODE = WALKRIGHT) AND (MyAnimFrame < RIGHT1SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALKRIGHT)
				PLAYSOUND>SMLSTEP7 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
			WHILE ((MODE = WALKRIGHT) AND (MyAnimFrame < RIGHT2SOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = WALKRIGHT)
				PLAYSOUND>SMLSTEP18 0 0.8 0.0 0.0 0.0 RANDOM
			ENDIF
		ENDIF 

		IF (MODE = DIE)						
			WHILE ((MODE = DIE) AND (MyAnimFrame < DIESOUND))
				MyFlag = MyFlag
			ENDWHILE
			IF (MODE = DIE)
				PLAYSOUND>SOLDIER_FALL 0 1.0 0.0 0.0 0.0 RANDOM	
			ENDIF
			endSound = 1
		ENDIF

	IF (endSound)
		TRIGSTOP
	ELSE
		TRIGFIN
	ENDIF
ENDTRIGGER

LOCALINT ACTIVECOLL
LOCALINT DieForward
LOCALINT time
//NUM OF FRAMES TO ALLOW ON PLAYER HIT DEATH BEFORE WE START POLLING FOR SPLAT CONDITIONS
LOCALINT DEATHTIME
STATE Wait
	MODE = DIE
  //let new ones pop out of generator
	IF ((isGenerated = 1.0) AND (MyParentParentFlag))
		ParentParentVar = ParentParentVar + 1.0
	ENDIF

	//ensure soldiers dont try to avoid us
	MyFlag = MyFlag | NOSTRAT2STRAT

 	//to turn off lock-on
	health = 0.0
	IF ((MyFlag2 & PLAYERHIT) || (MyFlag2 & BIGDAMAGE))
		IF (MyFlag2 & PLAYERHIT)
			MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierDie>NOTWEEN
		ELSE
			MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierHitBlast>NOTWEEN
		ENDIF
   	ELSE
		IF ((MyFlag2 & HIT_LEFT) AND (MyFlag2 & HIT_RIGHT))
			MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierDie>NOTWEEN
		ELSE
			IF (MyFlag2 & HIT_LEFT)
				MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierHitLeft>NOTWEEN
			ELSE
				IF (MyFlag2 & HIT_RIGHT)
					MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierHitRight>NOTWEEN
				ELSE
					MODELANIM>ENEMIES\footsoldierlevel2.rdo>footSoldierDie>NOTWEEN
			   	ENDIF
			ENDIF
		ENDIF
	ENDIF

 	IF (!(MyFlag2  & BIGDAMAGE))
		IF (MyFlag2 & PLAYERHIT)
			MyFlag = MyFlag | REALGRAVITYON
			InActivateObjectCollision(0)

			//IF WE'RE DYING IN A FORWARD MANNER, THE ACTIVE COLLISION SPOT IS THE FEET
			//ELSE, THE ACTIVE COLLISION IS THE HEAD
		//	IF (DieForward)
		//		ACTIVECOLL = FEET
		//	ELSE
				ACTIVECOLL = HEAD
		//ENDIF
			
	   
		 	ActivateObjectCollision(ACTIVECOLL)
			time = 0
			//WHILE WE'RE DYING AND NOT HITTING, CONTINUE
		
			IF (PAL)
				IF (DieForward)
					DEATHTIME = 28
				ELSE
					DEATHTIME = 14
				ENDIF
	   		ELSE
				IF (DieForward)
					DEATHTIME = 35
				ELSE
					DEATHTIME = 15
				ENDIF
			ENDIF
		



			WHILE ((time < DEATHTIME) AND (!ObjectHitFloor(ACTIVECOLL))) 
				time = time + 1
			ENDWHILE

			PLAYSOUND>SOLDIER_FALL 0 1.0 0.0 0.0 0.0 RANDOM

			MyAnimFlag = MyAnimFlag | PAUSED

			time = 0
			WHILE (!ObjectHitFloor(ACTIVECOLL) AND time < 200)
 				IF (DieForward)
					z = z - 0.3
					MoveY(0.2)
				ELSE
					z = z - 0.2
				ENDIF
				time = time + 1
		 	ENDWHILE

			PLAYSOUND>SOLDIER_FALL 0 1.0 0.0 0.0 0.0 RANDOM

			MyAnimFlag = MyAnimFlag & LNOT(PAUSED)

			WHILE (MyAnimFlag & RUNNING)
				MyFlag = MyFlag
			ENDWHILE

			MakeFrags (1.2, 10)
			speedz = - speedz/2.0
			SetFriction(0.1,0.1,0.0)
		ELSE
			WHILE (MyAnimFlag & RUNNING)
				MODE = DIE
			ENDWHILE
		ENDIF
  	ELSE
		SetFriction(0.0,0.0,0.0)
		MyFlag = MyFlag | GRAVITYON | FLOORCOLL
		//KEEP GOING FOR 5 SECONDS
		InActivateObjectCollision(0)
		ActivateObjectCollision(1)
		time = 0
		WHILE (!ObjectHitFloor(1) AND time < 200) 
			time = time + 1
		   //	MyFlag = MyFlag
		ENDWHILE
		PLAYSOUND>SOLDIER_FALL 0 1.0 0.0 0.0 0.0 RANDOM
		MakeFrags (1.2, 10)
		speedz = - speedz/2.0
	  	SetFriction(0.1,0.1,0.0)
		ActivateObjectCollision(1)
		WHILE (!ObjectHitFloor(1) AND time < 200) 
 			time = time + 1
		  // 	MyFlag = MyFlag
		ENDWHILE
		PLAYSOUND>SOLDIER_FALL 0 1.0 0.0 0.0 0.0 RANDOM
  		KillMyVelocity()
	ENDIF

	MyFlag2 = MyFlag2 | TRANSLUCENT
	WHILE (trans > 0.02)
		trans = trans - 0.02
	ENDWHILE

//	IF (isGenerated = 1.0)
//		ParentParentVar = ParentParentVar + 1.0
//	ENDIF


   	DeleteMyParent()
	IF (IsChallengeLevel())
		Score = Score - 1
	ELSE
		Score = Score + 1000
	ENDIF

	Delete()
ENDSTATE
