	ParentSemaphore = GOSTRAT
	InsideCheck =1
	
  //	IF ( !NearParentXY(25.0) OR NearPlayerXY (NearRange + 5.0))
  	IF (!NearParentXY(25.0) OR FIREPAUSE)
		IF (NearPlayerXY (NearRange + 5.0))
